  predicate is_equal_list (list1 list2: list 'a)
  = match list1,list2 with
    | Nil, Nil -> True
    | Cons _ _, Nil | Nil, Cons _ _ -> False
    | Cons x1 list1', Cons x2 list2' -> 
        x1 = x2 && 
        is_equal_list list1' list2'
    end
    
  let rec lemma equality_is_equal_list (l1 l2: list 'a)
    ensures { is_equal_list l1 l2 -> l1 = l2 }
  = match l1,l2 with
    | Nil, Nil -> ()
    | Cons x l, Cons y ls -> equality_is_equal_list l ls
    | _ -> ()
    end
    
  let rec lemma is_equal_list_itself (l1: list 'a)
    ensures { is_equal_list l1 l1 }
  = match l1 with
    | Nil -> ()
    | Cons x l -> is_equal_list_itself l
    end
    
    
  lemma is_equal_list_findFirst: forall clauselist c.
    let (left,right) = findFirst clauselist c in
      is_equal_list (left ++ right) clauselist
      
      
  let rec lemma tuple_equality (z1 z2 r1 r2: list 'a)
    ensures { is_equal_list (z1++z2) (r1++r2) -> is_equal_list z1 r1 -> is_equal_list z2 r2 }
    ensures { is_equal_list (z1++z2) (r1++r2) -> is_equal_list z2 r2 -> is_equal_list z1 r1 }
    variant { length r1 }
  = match z1,r1 with
    | Nil, Nil -> ()
    | Cons x l, Cons y lx -> tuple_equality l z2 lx r2
    | _ -> ()
    end
  
  let ghost function permut_to_match_findFirst (clauselist: list (fset atomicformula, rightside)) (c d: fset atomicformula) : list (fset atomicformula, rightside)
    requires { subset c d }
    requires { let (left,right) = findFirst clauselist c in right <> Nil }
    ensures { permut clauselist result }
    ensures { let (left,right) = findFirst clauselist c in
              let (l,r) = findFirst result d in
              (hd right) = (hd r) }
  = let (left,right) = findFirst clauselist c in
    let (l,r) = findFirst clauselist d in
    if (is_equal_list r right) then
      clauselist
    else
      (right ++ left)
  
