    variant { length clauselist }
  = let (left,right) = findFirst clauselist c in
                match right with
                  | Nil -> ()
                  | Cons (_,p) l ->
                        monotone_A (FS.add (convertRStoAF p) c) (FS.add (convertRStoAF p) d) (left ++ l)
